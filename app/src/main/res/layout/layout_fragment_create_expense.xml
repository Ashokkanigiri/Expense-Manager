<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewmodel"
            type="com.ashok.kanigiri.expensemanager.feature.createexpensedialog.viewmodel.CreateExpenseDialogViewModel" />

        <variable
            name="date"
            type="String" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/bg_bottom_sheet_top"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline_start">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="49dp" />

            <TextView
                android:id="@+id/tv_label"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:text="Create Expense"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/guideline2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/tv_expense_category_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_rounded_edittext"
                android:padding="10dp"
                android:textSize="16sp"
                android:text="@={viewmodel.expenseName}"
                app:layout_constraintEnd_toEndOf="@+id/et_expense_value_field"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/et_expense_value_field"
                app:layout_constraintTop_toTopOf="@+id/guideline2"
                tools:text="efieieifneifn" />

            <TextView
                android:id="@+id/tv_expense_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Title"
                app:layout_constraintBottom_toBottomOf="@+id/tv_expense_category_field"
                app:layout_constraintEnd_toEndOf="@+id/tv_expense_value"
                app:layout_constraintStart_toStartOf="@+id/tv_expense_value"
                app:layout_constraintTop_toTopOf="@+id/tv_expense_category_field" />

            <TextView
                android:id="@+id/tv_expense_value"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Expense [rs]"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/et_expense_value_field"
                app:layout_constraintEnd_toStartOf="@+id/et_expense_value_field"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/et_expense_value_field"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/et_expense_value_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_rounded_edittext"
                android:ems="10"
                android:text="@={viewmodel.expensePrice}"
                android:hint="Please Enter Price for the expense"
                android:textSize="16sp"
                android:inputType="numberDecimal"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_expense_value"
                app:layout_constraintTop_toBottomOf="@+id/tv_expense_category_field" />



            <TextView
                android:id="@+id/tv_expense_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expense Date"
                app:layout_constraintBottom_toBottomOf="@+id/editTextDate"
                app:layout_constraintEnd_toStartOf="@+id/editTextDate"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editTextDate" />

            <TextView
                android:id="@+id/editTextDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                tools:text="jjjj"
                android:padding="10dp"
                android:text="@{date}"
                android:textSize="16sp"
                android:background="@drawable/bg_rounded_edittext"
                android:onClick="@{()->viewmodel.showCalenderPicker()}"
                app:layout_constraintEnd_toEndOf="@+id/et_expense_value_field"
                app:layout_constraintStart_toStartOf="@+id/et_expense_value_field"
                app:layout_constraintTop_toBottomOf="@+id/et_expense_value_field" />



        </androidx.constraintlayout.widget.ConstraintLayout>


        <Button
            android:id="@+id/btn_create_expense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Create Expense"
            android:onClick="@{() -> viewmodel.createExpense()}"
            android:textAllCaps="false"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/button_bg"
            android:textColor="@color/white"
            android:background="@drawable/bg_bottom_sheet_middle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/cl_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>