<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/custum_action_bar"
                layout="@layout/custum_action_bar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Your Monthly Expenditure:"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/margin_end"
                app:layout_constraintStart_toStartOf="@+id/margin_start"
                app:layout_constraintTop_toBottomOf="@+id/custum_action_bar" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                setup_progressbar_tint="@{50}"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:max="100"
                android:progress="20"
                android:progressBackgroundTint="@color/light_grey"
                app:layout_constraintEnd_toStartOf="@+id/tv_salary_max"
                app:layout_constraintStart_toEndOf="@+id/tv_salary_min"
                app:layout_constraintTop_toBottomOf="@+id/materialTextView" />



            <TextView
                android:id="@+id/tv_salary_min"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="0"
                android:gravity="center_vertical"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/progressBar"
                app:layout_constraintEnd_toStartOf="@+id/progressBar"
                app:layout_constraintStart_toStartOf="@+id/margin_start"
                app:layout_constraintTop_toTopOf="@+id/progressBar"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/tv_salary_max"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:text="Rs. 46000"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="@+id/progressBar"
                app:layout_constraintEnd_toStartOf="@+id/margin_end"
                app:layout_constraintStart_toEndOf="@+id/progressBar"
                app:layout_constraintTop_toTopOf="@+id/progressBar" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_chart_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Monthly Expenditure Analysys"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/margin_end"
                app:layout_constraintStart_toStartOf="@+id/margin_start"
                app:layout_constraintTop_toBottomOf="@+id/progressBar" />


            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/expenditure_chart"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toStartOf="@+id/margin_end"
                app:layout_constraintStart_toStartOf="@+id/margin_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_chart_header" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/margin_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="20dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/margin_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="20dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>