<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.ashok.kanigiri.expensemanager.feature.updateSalary.UpdateSalaryDialogViewmodel" />

        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="10dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="10dp" />

       <androidx.constraintlayout.widget.ConstraintLayout
           android:id="@+id/cl_main_layout"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:padding="15dp"
           android:background="@drawable/bg_bottom_sheet_top"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintEnd_toEndOf="@id/guideline_end"
           app:layout_constraintStart_toStartOf="@id/guideline_start">

           <TextView
               android:id="@+id/tv_header"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Update Salary"
               android:textSize="18sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/tv_dialog_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:text="Please update your salary below"
               android:textSize="16sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/tv_header" />

           <EditText
               android:id="@+id/et_salary"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:background="@drawable/bg_rounded_edittext"
               android:ems="10"
               android:inputType="number"
               android:padding="5dp"
               android:textSize="16sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/tv_dialog_title" />

           <TextView
               android:id="@+id/tv_update_salary_alert"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:text="* Your Updated salary is lower than your allocated monthly expenses"
               android:textSize="12sp"
               android:gravity="center"
               android:visibility="@{viewModel.showErrorText ? View.VISIBLE: View.GONE}"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/et_salary" />

           <ImageView
               android:id="@+id/iv_cancel"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:onClick="@{()-> viewModel.dismissDialog()}"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:srcCompat="@drawable/ic_baseline_cancel_24" />

       </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/btn_update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_bottom_sheet_middle"
            android:backgroundTint="@color/button_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="Update"
            android:onClick="@{()-> viewModel.onUpdateSalaryClicked()}"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/cl_main_layout"
            app:layout_constraintStart_toStartOf="@+id/cl_main_layout"
            app:layout_constraintTop_toBottomOf="@+id/cl_main_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>